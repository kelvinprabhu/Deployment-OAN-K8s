{
  "realm": "oan-telemetry",
  "enabled": true,
  "displayName": "OAN Telemetry",
  "displayNameHtml": "<b>OAN</b> Telemetry Dashboard",

  "sslRequired": "none",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,

  "accessTokenLifespan": 3600,
  "ssoSessionIdleTimeout": 86400,
  "ssoSessionMaxLifespan": 604800,
  "offlineSessionIdleTimeout": 2592000,

  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "Full access to telemetry dashboard"
      },
      {
        "name": "viewer",
        "description": "Read-only access to telemetry dashboard"
      },
      {
        "name": "default-roles-oan-telemetry",
        "description": "Default role for new users",
        "composite": true,
        "composites": {
          "realm": ["viewer"]
        }
      }
    ]
  },

  "defaultRoles": ["default-roles-oan-telemetry"],

  "clients": [
    {
      "clientId": "oan-telemetry-dashboard",
      "name": "OAN Telemetry Dashboard",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "implicitFlowEnabled": false,
      "serviceAccountsEnabled": false,

      "rootUrl": "http://localhost:8082",
      "baseUrl": "/",
      "adminUrl": "http://localhost:8082",

      "redirectUris": [
        "http://localhost:8082/*",
        "http://127.0.0.1:8082/*",
        "http://localhost:8081/*",
        "http://127.0.0.1:8081/*",
        "http://localhost:8881/*",
        "http://127.0.0.1:8881/*",
        "*"
      ],
      "webOrigins": [
        "http://localhost:8082",
        "http://127.0.0.1:8082",
        "http://localhost:8081",
        "http://127.0.0.1:8081",
        "http://localhost:8881",
        "http://127.0.0.1:8881",
        "+"
      ],

      "protocol": "openid-connect",
      "fullScopeAllowed": true,

      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ]
    }
  ],

  "users": [
    {
      "username": "kelvin",
      "enabled": true,
      "emailVerified": true,
      "email": "kelvin@oan.com",
      "firstName": "Kelvin",
      "lastName": "Prabhu",
      "credentials": [
        {
          "type": "password",
          "value": "1234",
          "temporary": false
        }
      ],
      "realmRoles": [
        "admin",
        "default-roles-oan-telemetry"
      ]
    },
    {
      "username": "viewer",
      "enabled": true,
      "emailVerified": true,
      "email": "viewer@oan.com",
      "firstName": "Demo",
      "lastName": "Viewer",
      "credentials": [
        {
          "type": "password",
          "value": "viewer123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "viewer",
        "default-roles-oan-telemetry"
      ]
    }
  ],

  "scopeMappings": [
    {
      "client": "oan-telemetry-dashboard",
      "roles": ["admin", "viewer"]
    }
  ]
}
